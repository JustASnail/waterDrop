<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="45dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="49dp"
        android:src="@drawable/btn_st_qxtc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_top"
        android:background="@drawable/shape_round_white_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/img_st_phtc"
            android:text="选择你喜欢的水塘"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <GridView
            android:id="@+id/grid_view"
            android:layout_marginTop="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:horizontalSpacing="20dp"
            android:numColumns="3"
            android:verticalSpacing="23dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="23dp"
            android:background="#efefef"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp">
            <TextView
                android:text="完成"
                android:id="@+id/tv_ok"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:background="@drawable/sele_btn_login"
                android:layout_width="92dp"
                android:layout_height="25dp"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
