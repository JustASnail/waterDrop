<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_card_pool"
    android:layout_width="240dp"
    android:layout_height="117dp"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:background="#0f0">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:background="#f0f"
                >

                <ImageView
                    android:id="@+id/iv_head_pool"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    tools:background="#348204"/>


                <TextView
                    android:id="@+id/tv_pool_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_head_pool"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/iv_head_pool"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="包大包大大人包大包大大人包大包大大人"/>

                <TextView
                    android:id="@+id/tv_pool_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_pool_title"
                    android:layout_below="@id/tv_pool_title"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:textColor="#666"
                    android:textSize="11sp"
                    tools:text="杰迷们，这里汇聚全球喜欢Jay周的粉丝…杰迷们，这里汇聚全球喜欢Jay周的粉丝…"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:textColor="#858585"
                android:textSize="10sp"
                android:text="水塘"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
