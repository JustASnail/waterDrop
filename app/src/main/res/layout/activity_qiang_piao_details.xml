<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_bg"
              android:orientation="vertical">

    <include
        layout="@layout/layout_common_toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_goolds_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_goods"
                    android:layout_width="match_parent"
                    android:layout_height="640dp"
                    />

                <View
                    android:id="@+id/goods1"
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:layout_marginTop="155dp"/>

                <View
                    android:id="@+id/goods2"
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:layout_below="@id/goods1"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/iv_details"
                    android:layout_width="match_parent"
                    android:layout_height="698dp"
                    />

                <View
                    android:id="@+id/friend_help"
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="366dp"/>

                <View
                    android:id="@+id/top"
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    android:layout_alignTop="@id/friend_help"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/friend_help"/>

                <View
                    android:id="@+id/my_ticket"
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    android:layout_alignTop="@id/top"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/top"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_friend_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/iv_friend_help"
                    android:layout_width="match_parent"
                    android:layout_height="698dp"
                   />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_top"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iv_top"
                    android:layout_width="match_parent"
                    android:layout_height="698dp"
                    />

            </RelativeLayout>


        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:id="@+id/iv_btn"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:src="@drawable/test_mszjf"
        android:visibility="gone"/>
</LinearLayout>