<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/vkdc_name"
        android:textSize="14sp"
        android:textColor="@color/color_grey_666666"
        android:lines="1"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/vkdc_value"
        android:textSize="14sp"
        android:textColor="@color/color_grey_555555"
        android:textColorHint="@color/color_grey_888888"
        android:lines="1"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"/>
    <EditText
        android:id="@+id/vkdc_value_edit"
        android:textSize="14sp"
        android:textColor="@color/color_grey_555555"
        android:textColorHint="@color/color_grey_888888"
        android:background="@null"
        android:inputType=""
        android:visibility="gone"
        android:lines="1"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"/>
    <ImageView
        android:id="@+id/vkdc_right_image"
        android:visibility="gone"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/vkdc_arrow"
        android:src="@mipmap/icon_wd_yj_1"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</merge>