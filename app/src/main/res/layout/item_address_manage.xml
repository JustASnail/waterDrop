<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:layout_marginTop="8dp"
              android:background="@drawable/touch_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">


        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:maxLength="11"
            android:textColor="@color/gray666666"
            android:textSize="13sp"
            tools:text="13816881234"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_phone"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/gray666666"
            android:textSize="13sp"
            tools:text="张三但"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:text="上海市外滩19号"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DFDFDF"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/accb_set_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@drawable/sele_check"
            android:checked="false"
            android:padding="4dp"
            android:text="设为默认"
            android:textColor="@drawable/sele_text_check"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/icon_delete"
            android:drawablePadding="2dp"
            android:text="@string/delete"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:layout_toLeftOf="@id/tv_delete"
            android:drawableLeft="@mipmap/icon_edit"
            android:drawablePadding="2dp"
            android:text="@string/edit"
            android:textSize="12sp"/>

    </RelativeLayout>
</LinearLayout>