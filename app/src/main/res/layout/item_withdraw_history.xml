<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@drawable/touch_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:textSize="14sp"
                android:id="@+id/tv_account_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额：￥"
                android:textColor="@color/black" />

            <TextView
                android:textSize="14sp"
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_account_type"
                android:textColor="@color/black"
                tools:text="234" />

            <TextView
                android:textSize="14sp"
                android:id="@+id/tv_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_account_type"
                android:layout_marginTop="5dp"
                android:text="到账银行账户："
                android:textColor="@color/black" />

            <TextView
                android:textSize="14sp"
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_account_type"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/tv_bank"
                android:textColor="@color/black"
                tools:text="招商银行（2809）" />

            <TextView
                android:textSize="12sp"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_bank"
                android:layout_marginTop="5dp"
                tools:text="2017-12-12 09-03-03" />

        </RelativeLayout>

        <TextView
            android:textSize="16sp"
            android:id="@+id/tv_account_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tools:text="处理中" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/splite_line" />

</RelativeLayout>