<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_pool"
    android:layout_width="match_parent"
    android:layout_height="208dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="158dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />

            <TextView
                android:id="@+id/tv_focus_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@mipmap/icon_st_gzrs"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="123123" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/icon_wd_wdsc_time"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="2017-07-08 14:45:11" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    tools:text="MTV全球MTV全球华语音乐盛典MTV全球华语音乐盛典MTV全球华语音乐盛典MTV全球华语音乐盛典华语音乐盛典MTV全球MTV全球华语音乐盛典MTV全球华语音乐盛典MTV全球华语音乐盛典MTV全球华语音乐盛典华语音乐盛典" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="12sp"
                    tools:text="对mtv感兴趣的小伙伴MTV全球MTV全球华语音乐盛典MTV全球华语音乐盛典MTV全球华语音乐盛典MTV全球华语音乐盛典华语音乐盛典MTV全球MTV全球华语音乐盛典MTV全球华语音乐盛典MTV全球华语音乐盛典MTV全球华语音乐盛典华语音乐盛典MTV全球MTV全球华语音乐盛典MTV全球华语音乐盛典MTV全球华语音乐盛典MTV全球华语音乐盛典华语音乐盛典MTV全球MTV全球华语音乐盛典MTV全球华语音乐盛典MTV全球华语音乐盛典MTV全球华语音乐盛典华语音乐盛典们赶紧上车吧…" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:drawableLeft="@mipmap/icon_wd_wdst_gl"
                android:drawablePadding="7dp"
                android:text="管理"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/sp_12"
                tools:text="哈哈哈"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_avatar"/>

            <com.netease.nim.uikit.common.ui.imageview.HeadImageView
                android:id="@+id/iv_avatar"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:scaleType="centerCrop"
                tools:background="@color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
