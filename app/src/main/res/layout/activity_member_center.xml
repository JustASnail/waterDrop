<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#03B1FF"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="50dp"
                android:layout_height="@dimen/action_bar_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:src="@drawable/sele_commn_back" />

            <TextView
                android:id="@+id/tv_commn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="会员专区" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title"
            android:background="@mipmap/img_vip_background"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/amc_vip_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/amc_vip_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/amc_vip_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="14sp"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_vip_qysm" />
        </LinearLayout>

        <TextView
            android:id="@+id/amc_statement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/icon_next"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="14sp"
            android:text="成为水滴无界超级会员，尊享会员权益，点击查看详情！" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/amc_want_become_member"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/img_hyzq_hybg"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/amc_want_become_member_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="如何成为会员？"
            android:textColor="@color/color_edt_hint"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/amc_method_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/amc_want_become_member_title"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/amc_become_member_method1_tip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textColor="@color/base_black_2a"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/amc_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sele_oval_add_friend"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="立即激活"
                android:textColor="@drawable/sele_text_add_friend"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/amc_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/amc_method_1"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:background="@color/base_gray_eb" />

        <!--<LinearLayout
            android:id="@+id/amc_method_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/amc_line"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/amc_become_member_method2_tip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textColor="@color/base_black_2a"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/amc_copy_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sele_oval_add_friend"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="复制微信号"
                android:textColor="@drawable/sele_text_add_friend"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:id="@+id/amc_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/amc_method_2"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:background="@color/base_gray_eb" />-->

        <LinearLayout
            android:id="@+id/amc_method_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/amc_line"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/amc_become_member_method3_tip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textColor="@color/base_black_2a"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/amc_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sele_oval_add_friend"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="立即购买"
                android:textColor="@drawable/sele_text_add_friend"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_vip"
            android:paddingTop="10dp"
            android:background="@color/window_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="visible"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/img_hyzq_mftq" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/splite_line" />

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/touch_bg"
                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <ImageView
                    android:id="@+id/iv_vrglass"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_qs_90x90" />

                <LinearLayout
                    android:paddingEnd="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/iv_vrglass"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_active_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_huzq_shopping"
                        android:drawablePadding="2dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="买就送蓝光高清VR眼镜" />

                    <TextView
                        android:id="@+id/tv_active_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        tools:text="每购买以下一件礼包即可免费获得一副价值358元的水嘀VR蓝光3D眼镜" />
                </LinearLayout>

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:background="@color/window_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>