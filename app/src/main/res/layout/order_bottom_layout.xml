<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_order_bottom"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/white"
    android:layout_alignParentBottom="true"
    tools:showIn="@layout/item_order_list">

    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="76dp"
        android:layout_height="28dp"
        android:elevation="3dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_oval_bule"
        android:gravity="center"
        android:singleLine="true"
        tools:text="立即付款"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_14" />

    <TextView
        tools:visibility="visible"
        android:id="@+id/tv_btn_wlgz"
        android:layout_toLeftOf="@id/tv_btn"
        android:layout_marginRight="10dp"
        android:layout_width="76dp"
        android:layout_height="28dp"
        android:elevation="3dp"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_oval_gray"
        android:gravity="center"
        android:singleLine="true"
        android:text="物流跟踪"
        android:visibility="gone"
        android:textColor="#858585"
        android:textSize="@dimen/sp_14" />

    <TextView
        tools:visibility="visible"
        android:id="@+id/tv_btn_lxkf"
        android:layout_toLeftOf="@id/tv_btn_wlgz"
        android:layout_marginRight="10dp"
        android:layout_width="76dp"
        android:layout_height="28dp"
        android:elevation="3dp"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_oval_gray"
        android:gravity="center"
        android:maxLines="1"
        android:text="联系客服"
        android:visibility="gone"
        android:textColor="#858585"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_btn_ckyt"
        android:layout_toLeftOf="@id/tv_btn_lxkf"
        android:layout_marginRight="10dp"
        android:layout_width="76dp"
        android:layout_height="28dp"
        android:elevation="3dp"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_oval_gray"
        android:gravity="center"
        android:singleLine="true"
        android:text="查看来源"
        android:textColor="#858585"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>