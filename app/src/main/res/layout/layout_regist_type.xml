<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ll_login_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_btn_search_gray_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_dl_srsjh"/>

        <View
            android:layout_width="3px"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:background="#ddd"/>

        <TextView
            android:textSize="14sp"
            android:textColor="#FE0000"
            android:text="*"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_moblie_regist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/edit_color_hint"
            android:textCursorDrawable="@null"
            android:textSize="14sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn_search_gray_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="7dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_dl_yzm"/>

        <View
            android:layout_width="3px"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:background="#ddd"/>

        <TextView
            android:textSize="14sp"
            android:textColor="#FE0000"
            android:text="*"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/et_code_sms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/edit_color_hint"
            android:textCursorDrawable="@null"
            android:textSize="14sp"/>

        <com.drops.waterdrop.widget.CountDownTimerButton
            android:id="@+id/btn_getAuthCode"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/sele_count_down_bg"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="获取验证码"
            android:textColor="@drawable/sele_text_count_down"
            android:textSize="12sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn_search_gray_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_dl_mm"/>

        <View
            android:layout_width="3px"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:background="#ddd"/>

        <TextView
            android:textSize="14sp"
            android:textColor="#FE0000"
            android:text="*"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_pwd_regist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="密码由6～16位数字和字母组成"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/edit_color_hint"
            android:textCursorDrawable="@null"
            android:textSize="14sp"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox_show_pwd_regist"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingRight="3dp"
            android:checked="false"
            android:button="@drawable/sele_eye_check"
            android:layout_centerVertical="true"
            android:gravity="center"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn_search_gray_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_dl_mxyqm"/>

        <View
            android:layout_width="3px"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:background="#ddd"/>

        <TextView
            android:id="@+id/tv_rq_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_weight="1"
            android:hint="请用扫码形式输入邀请码"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/edit_color_hint"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:src="@mipmap/btn_dl_ewmsm"
            />

    </LinearLayout>
    <Button
        android:id="@+id/btn_regist"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sele_btn_login"
        android:gravity="center"
        android:text="立即注册"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_horizontal"
        >

        <CheckBox
            android:id="@+id/checkbox_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/sele_check"
            android:checked="true"
            android:button="@null"
            android:drawablePadding="7dp"
            android:text="已阅读并同意"
            android:textColor="#d6d6d6"
            android:textSize="12sp"

           />


        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《水滴用户协议》"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>
