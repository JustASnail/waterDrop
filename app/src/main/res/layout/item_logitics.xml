<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="60dp">

    <LinearLayout
        android:id="@+id/rl_point"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/tv_up_line"
            android:layout_width="2dp"
            android:layout_height="12dp"
            android:background="@color/grar_dedede" />

        <ImageView
            android:id="@+id/iv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_wlxx_fdl" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grar_dedede" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rl_point"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_current_pos"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gray_d9d9d9"
            tools:text="[上海市]上海市浦东新区张江派件员：六成
18019098100 正在为您派件 网点客服电话：
021-48571234  52367845" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/color_gray_d9d9d9"
            android:textSize="12sp"
            tools:text="2017-06-05  21:23:45" />

        <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:background="@color/grar_dcdcdc" />
    </LinearLayout>

</RelativeLayout>

