<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="114dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_order_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/img_qs_90x90"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/iv_order_icon"
        android:layout_alignTop="@id/iv_order_icon"
        android:maxEms="8"
        android:maxLines="2"
        tools:text="TISSOT唯路时精钢男士石英手表市场潮流"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/specification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="2dp"
        android:text="规格 : "
        android:textColor="@color/color_edt_hint"
        android:textSize="12sp" />

    <TextView
        android:paddingEnd="16dp"
        android:id="@+id/tv_specification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/specification"
        android:layout_toRightOf="@id/specification"
        android:layout_marginBottom="1dp"
        android:maxLines="1"
        tools:text="规格1"
        android:textColor="@color/color_edt_hint"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll_service"
        android:layout_alignLeft="@id/specification"
        android:layout_width="match_parent"
        android:layout_alignBottom="@id/iv_order_icon"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_service1"
            android:visibility="gone"
            tools:visibility="visible"
            android:gravity="center"
            tools:text="7天退换"
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/shape_oval_bule"
            android:layout_width="52dp"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/tv_service2"
            android:visibility="gone"
            tools:visibility="visible"
            android:gravity="center"
            tools:text="7天退换"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/shape_oval_bule"
            android:layout_width="52dp"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/tv_service3"
            android:visibility="gone"
            tools:visibility="visible"
            android:gravity="center"
            tools:text="7天退换"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/shape_oval_bule"
            android:layout_width="52dp"
            android:layout_height="16dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_name"
        android:gravity="center_vertical|right"
        android:singleLine="true"
        tools:text="￥1,850.00"
        android:textColor="@color/text_red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_goods_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_name"
        android:layout_below="@id/tv_price"
        android:gravity="center_vertical|right"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:text="x1"
        android:textColor="@color/color_edt_hint"
        android:textSize="14sp" />
</RelativeLayout>