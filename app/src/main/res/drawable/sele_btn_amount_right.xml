<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"  >
        <shape android:shape="rectangle">
        <solid android:color="@color/color_edt_hint" />
        <stroke
            android:width="1dp"
            android:color="@color/colorPrimary" />
        <corners
            android:bottomRightRadius="20dp"
            android:topRightRadius="20dp"
            />
        <padding
            android:bottom="1dp"
            android:left="1dp"
            android:right="1dp"
            android:top="1dp" />
        </shape>
        </item>
    <item android:state_enabled="false" >
        <shape android:shape="rectangle">
            <solid android:color="@color/color_edt_hint" />
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" />
            <corners
                android:bottomRightRadius="20dp"
                android:topRightRadius="20dp"
                />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <item  >
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" />
            <corners
                android:bottomRightRadius="20dp"
                android:topRightRadius="20dp"
                />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
        </item>

</selector>