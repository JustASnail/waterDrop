<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"  >
        <shape android:shape="rectangle">

            <solid
                android:color="@color/colorRedPress"/>
            <corners
                android:radius="20dp"
                />

            <size
                android:width="70dp"
                android:height="25dp"/>
        </shape>
        </item>
    <item android:state_selected="true" >
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/gray_color"
                android:width="1dp"/>

            <solid
                android:color="@color/white"/>
            <corners
                android:radius="20dp"
                />

            <size
                android:width="70dp"
                android:height="25dp"/>
        </shape>
    </item>

    <item  android:state_selected="false">
        <shape android:shape="rectangle">

            <solid
                android:color="@color/colorRed"/>
            <corners
                android:radius="20dp"
                />

            <size
                android:width="70dp"
                android:height="25dp"/>
        </shape>
    </item>

    <item  >
        <shape android:shape="rectangle">

            <solid
                android:color="@color/colorRed"/>
            <corners
                android:radius="20dp"
                />

            <size
                android:width="70dp"
                android:height="25dp"/>
        </shape>
        </item>

</selector>