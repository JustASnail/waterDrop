<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:width="1dp"
                   android:color="@color/white"/>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary"
                />
            <corners
                android:radius="50dp"
                />
            <size
                android:width="80dp"
                android:height="20dp"
                />
        </shape>
    </item>

    <item android:state_selected="false">
        <shape android:shape="rectangle">

            <solid android:width="1dp"
                   android:color="@color/white"/>

            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/color_d2d2d2"
                />


            <corners
                android:radius="50dp"
                />
            <size
                android:width="80dp"
                android:height="20dp"
                />
        </shape>

    </item>


    <item>
        <shape android:shape="rectangle">

            <solid android:width="1dp"
                   android:color="@color/white"/>

            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/color_d2d2d2"
                />


            <corners
                android:radius="50dp"
                />
            <size
                android:width="80dp"
                android:height="20dp"
                />
        </shape>
    </item>

</selector>